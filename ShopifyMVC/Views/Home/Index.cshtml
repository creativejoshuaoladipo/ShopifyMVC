@model ShopifyMVC.Models.ViewModels.HomeVM
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-2">SHOPIFY</h1>
    <p>Satisfying the needs of our Customers</p>
</div>



<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/CarouselImages/befpic web.jpg" class="d-block w-100" alt="BEFPIC">
        </div>
        <div class="carousel-item">
            <img src="~/CarouselImages/befpic web1.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/CarouselImages/befpic web2.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div>
    <img style="height:320px;width:100%" src="/CarouselImages/befpic web3.jpg" alt="Third slide">

</div>


<br />


<div class="container">

    <div class="text-center">
        <h2>Our Products</h2>

        <br />

        @foreach (var item in Model.Categories)
        {
            <button class="btn btn-info"> @item.Name</button>

        }

    </div>

    <br />

    <div class="row">
        @*//Display Products for each Categories using Partial View*@
        @foreach (var prod in Model.Products)
        {
            <partial name="_ProductCard" model="prod" />
        }


    </div>

</div>



