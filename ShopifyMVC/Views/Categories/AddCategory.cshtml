@model ShopifyMVC.Models.Category

<div class="container">

    <h1>Create New Category</h1>
    <form asp-action="AddCategory" method="post" enctype="multipart/form-data">
      
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="IsActive"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="IsActive">
                            <option disabled selected>---Select---</option>
                            <option>True</option>
                            <option>False</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="IsDelete"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="IsDelete">
                            <option disabled selected>---Select---</option>
                            <option>True</option>
                            <option>False</option>
                        </select>
                        <span asp-validation-for="IsDelete" class="text-danger"></span>
                    </div>

                </div>

                <div class= "col-8 offset-4 row" >
                    <div class="col">
                        <input type="submit" value="Create"  class="btn btn-success w-100"/>
                    </div>

                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                    </div>
                </div>
                </div>
            </div>
</form>


</div>
