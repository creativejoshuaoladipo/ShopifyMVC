@section Scripts{

    <script>
        function validateImageInput() {
            //We want to check if the user selected an image
            if (document.getElementById("uploadImage").value == "") {
                Swal.fire({
                    title: 'Error!',
                    text: 'No Image Uploaded, Remember to add an image',
                    icon: 'error',
                    confirmButtonText: 'Ok'
                })

                return false;
            } else
                return true;
        }    
    </script>

   
