@model ShopifyMVC.Models.ViewModels.ProductVM

<h2>Delete Product</h2>

<form asp-action="DeleteProduct" method="post" enctype="multipart/form-data">

    <input asp-for="Product.Id" hidden />

    <div class="row">
        <div class="col-8">
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Product.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.Name" class="form-control" disabled/>
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Product.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.Price" class="form-control" disabled />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Product.Description"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Product.Description" class="form-control summernote" disabled></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Product.Quantity"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.Quantity" class="form-control summernote" disabled/>
                    <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                </div>

            </div>


            <div class="form-group row py-2">
                <div class="col-4">
                    Image
                </div>
                <div class="col-8">
                    <input type="file" name="files" id="uploadBox" multiple class="form-control" disabled />
                </div>

            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Product.CategoryId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select" disabled>
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>

            </div>


            <div class="form-group row py-2">
                <div class="col-8 offset-4 row">

                    <div class="col">                      
                            <input type="submit" class="btn btn-info w-100" value="Delete" />                    
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4 ">
            @* Keep this empty *@
            @if (Model.Product.Id != 0)
            {
                @*<img src="@WC.ImagePath@Model.ProductImage" width="100%" style="border-radius:5px; border:1px solid #bbb" />*@
            }
        </div>
    </div>

</form>

